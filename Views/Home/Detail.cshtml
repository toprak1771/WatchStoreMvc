@model WatchSeller
@{
    ViewData["Title"] = "Detail";
}

<h1>Detay Sayfası</h1>

<table class="table ms-3">
    <thead>
        <tr>

            <th scope="col">Ürün Resim</th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Ürün Marka</th>
            <th scope="col">Ürün Renk</th>
            <th scope="col">Ürün Fiyat</th>
            <th scope="col">Satıcı</th>

        </tr>
    </thead>
        <tbody>
            <tr>

                <td>
                    <img src="~/img/@Model.Watch.Img" />
                </td>

                <td>@Model.Watch.Name</td>
                <td>@Model.Watch.Brand</td>
                <td>@Model.Watch.color</td>
                <td>@Model.Watch.Price</td>
                <td>@Model.Seller.Name</td>

                <td>
                    <a href="/Home/Delete/@Model.Id" class="btn btn-success btn-sm">Sil</a>
                </td>
            </tr>
        </tbody>
</table>
